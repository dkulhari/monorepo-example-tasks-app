    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:setup": "tsx src/db/setup-db.ts",
    "db:reset": "tsx src/db/reset-db.ts",
    "seed": "tsx src/db/seed/run.ts",
    "seed:multi-tenant": "tsx src/db/seed/multi-tenant-seed.ts",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:up": "tsx src/db/migrate.ts up",
    "migrate:down": "tsx src/db/migrate.ts down",
    "migrate:status": "tsx src/db/migrate.ts status",
    "migrate:create": "tsx src/db/migrate.ts create"
