    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.38.2",
    "drizzle-zod": "^0.6.1",
    "hono": "^4.6.13",
    "hono-pino": "^0.8.0",
    "jose": "^6.0.11",
    "lru-cache": "^11.0.2",
    "nodemailer": "^6.9.16",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "stoker": "^1.4.2",
    "zod": "^3.25.32"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/pg": "^8.15.2",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9.17.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-format": "^0.1.3",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
